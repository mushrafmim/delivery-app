<body>
    <div class="container pt-3">
        <div class="d-flex align-items-center justify-content-end py-3">
            <a href="/shops">
                <button type="button" class="btn btn-danger">CANCEL</button>
            </a>
        </div>
        <form action="/users/add" method="post">
            <h2 class="text-center">ADD NEW USER</h2>
            <div class="mb-3">
                <label for="textInputEmployeeFirstname" class="form-label">Firstname</label>
                <input type="text" name="firstname" class="form-control" id="textInputEmployeeFirstname">
            </div>
            <div class="mb-3">
                <label for="textInputEmployeeLastname" class="form-label">Lastname</label>
                <input type="text" name="lastname" class="form-control" id="textInputEmployeeLastname">
            </div>
            <div class="mb-3">
                <label for="textInputStreet" class="form-label">Email</label>
                <input type="email" name="email" class="form-control" id="textInputEmail">
            </div>
            <div class="mb-3">
                <label for="textInputContactNo" class="form-label">Contact No</label>
                <input type="tel" name="tel" class="form-control" id="textInputContactNo">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>